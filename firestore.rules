rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Public read: all users see the daily question
    match /dailyQuestions/{dateKey} {
      allow read: if true;
      allow write: if false; // write via admin only
    }

    // Solution is locked until user submits an answer for the day
    match /dailySolutions/{dateKey} {
      allow read: if isSignedIn()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid)/dailyAttempts/$(dateKey))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)/dailyAttempts/$(dateKey)).data.submitted == true;
      allow write: if false; // write via admin only
    }

    // User profile
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false;

      // Daily attempts
      match /dailyAttempts/{dateKey} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isOwner(userId);
        allow delete: if false;
      }

      // Submissions
      match /submissions/{submissionId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if false;
        allow delete: if false;
      }
    }
  }
}
